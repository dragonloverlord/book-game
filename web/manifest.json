{
  "manifest_version": 2,
  "name": "Book Writer",
  "version": "3.4.1",
  "description":"A book creating idle game that is made for chrome.",
  "author":"dragonloverlord",
  "short_name":"Book Writer",
  "offline_enabled":true,
  "minimum_chrome_version":"40",
  "icons": {
    "16": "images/Book-icon.png",
    "48": "images/Book-icon.png",
    "128": "images/Book-icon.png"
  },
  "app": {
    "background": {
      "scripts": [
        "main.js",
        "storage.js"
        ]
    }
  },
  "permissions": [
    "storage",
    "contextMenus",
    "unlimitedStorage",
    "alwaysOnTopWindows"
    ]
}
